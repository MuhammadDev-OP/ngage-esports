generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  username       String?
  email          String  @unique
  phoneNumber    String?
  hashedPassword String?
  userType       String  @default("Customer")
  balance        Float   @default(0.00)
}
